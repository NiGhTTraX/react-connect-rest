{
  "name": "react-rest-connect",
  "description": "A React container app that connects a view to a REST endpoint",
  "version": "0.0.1",
  "main": "dist/src/index",
  "types": "dist/src/index",
  "files": [
    "./dist/src"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc --declaration --outDir ./dist",
    "prepublishOnly": "npm run build",
    "start": "./start.sh",
    "frontend": "webpack-dev-server --config webpack.config.dev.js",
    "backend": "docker-compose up --build backend",
    "_backend": "ts-node src/server.ts",
    "playground": "cosmos --config playground/cosmos.config.js",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "./tests/run.sh",
    "test:node": "TS_NODE_CACHE=0 mocha --opts tests/node/mocha.opts",
    "test:node:coverage": "COVERAGE=1 nyc mocha --opts tests/node/mocha.coverage.opts",
    "test:gui": "./tests/gui/run.sh",
    "test:gui:debug": "./tests/gui/debug.sh",
    "test:gui:selenium": "./tests/gui/debug-selenium.sh",
    "_test:gui:fixtures": "cd playground && TS_NODE_CACHE=0 ./get-fixtures.js",
    "_test:gui": "TS_NODE_CACHE=0 mocha --opts tests/gui/mocha.opts",
    "_test:gui:debug": "TS_NODE_CACHE=0 SELENIUM_HOST=localhost mocha --opts tests/gui/mocha.debug.opts",
    "report-coverage": "nyc report --reporter=json && codecov -f tests/results/coverage/coverage-final.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "dependencies": {},
  "peerDependencies": {
    "react": "^16"
  },
  "devDependencies": {
    "@babel/core": "~7.2.0",
    "@babel/plugin-proposal-class-properties": "~7.2.0",
    "@babel/plugin-proposal-decorators": "~7.2.0",
    "@babel/preset-env": "~7.2.0",
    "@babel/preset-react": "~7.0.0",
    "@babel/preset-typescript": "~7.1.0",
    "@babel/register": "~7.0.0",
    "@nighttrax/eslint-config": "~2.1.0",
    "@types/chai": "~4.1.7",
    "@types/jquery": "~3.3.22",
    "@types/jsdom": "~12.2.0",
    "@types/mocha": "~5.2.5",
    "@types/node": "~10.12.2",
    "@types/react": "~16.7.0",
    "@types/react-dom": "~16.0.9",
    "@types/react-hot-loader": "~4.1.0",
    "@types/sinon": "~7.0.0",
    "@types/sinon-chai": "~3.2.1",
    "@types/webdriverio": "~4.13.0",
    "babel-loader": "~8.0.4",
    "babel-plugin-istanbul": "~5.1.0",
    "chai": "~4.2.0",
    "codecov": "~3.1.0",
    "css-loader": "~2.0.0",
    "dom-testing-library": "~3.16.1",
    "eslint": "~5.9.0",
    "eslint-plugin-react": "~7.11.1",
    "eslint-plugin-typescript": "~0.14.0",
    "html-webpack-plugin": "~3.2.0",
    "husky": "~1.2.0",
    "ignore-styles": "~5.0.1",
    "jquery": "~3.3.1",
    "jsdom": "~13.0.0",
    "less": "~3.9.0",
    "less-loader": "~4.1.0",
    "lint-staged": "~8.1.0",
    "mocha": "~5.2.0",
    "mugshot": "~0.3.2",
    "mugshot-looks-same": "~1.0.0",
    "mugshot-webdriverio": "~1.0.0",
    "nyc": "~13.1.0",
    "react": "~16.7.0",
    "react-cosmos": "~4.6.4",
    "react-cosmos-fetch-proxy": "~4.6.1",
    "react-cosmos-shared": "~4.6.1",
    "react-cosmos-voyager2": "~4.6.4",
    "react-dom": "~16.7.0",
    "react-hot-loader": "~4.6.3",
    "react-mock-component": "~0.4.1",
    "reset.css": "~2.0.2",
    "sinon": "~7.2.0",
    "sinon-chai": "~3.3.0",
    "style-loader": "~0.23.1",
    "ts-node": "~7.0.1",
    "typemoq": "~2.1.0",
    "typescript": "~3.1.6",
    "typescript-eslint-parser": "~20.1.1",
    "webdriverio": "~4.14.1",
    "webpack": "~4.27.0",
    "webpack-cli": "~3.1.2",
    "webpack-dev-server": "~3.1.10"
  }
}
